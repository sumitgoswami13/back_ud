              "protocol": "http",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notes", "transaction", "{{transactionId}}"],
              "query": [
                { "key": "userId", "value": "64f0aa111111111111111112" },
                { "key": "userType", "value": "admin" }
