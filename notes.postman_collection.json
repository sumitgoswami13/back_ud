    {
      "name": "User Notes",
      "item": [
        {
          "name": "Get Notes by User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/notes/user/{{userId}}?userType=user",
              "protocol": "http",
              "host": ["{{baseUrl}}"],
